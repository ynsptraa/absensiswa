<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#4A6CF7"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/purple_500">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logogede"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Absensi Siswa"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textjalan"
                android:layout_height="wrap_content"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:text="Jangan lupa absen masuk tepat waktu! Klik tombol di bawah untuk memulai hari Anda."
                android:textColor="#F0F0F0"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFFFF"
                android:layout_marginTop="16dp"
                android:alpha="0.3"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Title -->


    <!-- Button 1 -->
    <Button
        android:id="@+id/btn1"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABSEN MASUK"
        android:textColorHighlight="@color/black"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Button 2 -->
    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISPENSASI"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Button 3 -->
    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LIHAT ABSEN"
        android:background="@color/purple_500"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Button 4 -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="LIHAT DISPEN"
        android:background="@color/purple_500"
        android:textColor="#FFFFFF"/>

</LinearLayout>
